public ActionResult Index()
{
    IEntityQueryable&lt;MemberGroup&gt; context = EntityBuilder.GetContext&lt;MemberGroup&gt;();
    MemberGroup[] items = context.OrderBy().ToArray();
    return View(items);
}
</pre>
