@model MvcEditorModel
<div class="input-control radio default-style">
    <label>
        <input type="radio" name="@Model.Metadata.ClrName" value="true" @Html.Raw((bool)Model.Value ? " checked=\"checked\"" : "") />
        <span class="check"></span>
        Yes
    </label>
</div>
<div class="input-control radio default-style">
    <label>
        <input type="radio" name="@Model.Metadata.ClrName" value="false" @Html.Raw((bool)Model.Value ? "" : "checked=\"checked\"") />
        <span class="check"></span>
        No
    </label>
</div>
