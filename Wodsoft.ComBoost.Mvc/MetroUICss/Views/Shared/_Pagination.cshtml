@model IPagination
@{
    string url = ViewContext.Controller.ControllerContext.HttpContext.Request.Url.PathAndQuery;
    url = Url.SetQueryPath(url, "page");
}
<div class="button-set no-spaces" style="display: inline-block">
    @if (Model.CurrentPage == 1)
    {
        <a class="button disabled">&laquo;</a>
    }
    else
    {
        <a class="button" data-nav="true" href="@Html.Raw(url)1">&laquo;</a>
    }
    @{int count = 0;
    while (count < 5 && Model.CurrentPage - 2 + count <= Model.TotalPage)
    {
        if (Model.CurrentPage - 2 + count < 1)
        {
            count++;
            continue;
        }
        if (count == 2)
        {
            <a class="button active">@Html.Raw(Model.CurrentPage - 2 + count)</a>
        }
        else
        {
            <a class="button" data-nav="true" href="@Html.Raw(url + (Model.CurrentPage - 2 + count))">@(Model.CurrentPage - 2 + count)</a>
        }
        count++;
    }
    if (Model.CurrentPage == Model.TotalPage)
    {
        <a class="button disabled">&raquo;</a>
    }
    else
    {
        <a class="button" data-nav="true" href="@Html.Raw( url + Model.TotalPage)">&raquo;</a>
    }
    }
</div>
