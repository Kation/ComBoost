@model EntityParentModel[]
@for (int i = 0; i < Model.Length; i++)
{
    <li class="node">
        <a href="@Html.Raw(Url.Action(Html.ViewContext.RouteData.Values["action"].ToString(), new { size = Request["size"], parentpath = Model[i].Path, parentid = Model[i].Index }))"><span class="node-toggle"></span>@Model[i].Name</a>
        @{if (Model[i].Items.Length > 0)
        {
            <ul>
                @{Html.RenderPartial("ParentView", Model[i].Items);}
            </ul>
        }
        }
    </li>
}